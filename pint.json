{
    "preset": "laravel",
    "rules": {
        "binary_operator_spaces": {
            "default": "single_space"
        },
        "blank_line_before_statement": {
            "statements": [
                "return"
            ]
        },
        "concat_space": {
            "spacing": "one"
        },
        "declare_strict_types": false,
        "linebreak_after_opening_tag": true
    },
    "finder": {
        "in": [
            "app",
            "config",
            "database",
            "routes",
            "resources",
            "tests"
        ],
        "exclude": [
            "storage",
            "vendor",
            "node_modules"
        ]
    }
}
